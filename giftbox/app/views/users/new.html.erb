<h1>Users new</h1>


<%= simple_form_for @user, :url => users_path, :method => :post do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :username %>
  <%= f.input :password%>

  <%= f.label :is_gifter, 'Gifter' %>
  <%= f.radio_button :is_gifter, "Gifter" %>

  <%= f.button :submit %>
<% end %>


