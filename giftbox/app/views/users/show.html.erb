    <div class = "drop_off">
    <%= f.input :drop_off, :collection => ['Tues/6 p.m.','Thurs/6 p.m.'] %>
     </div>
     <%= f.submit %>
     <% end %>
</div>


    <br>
    <br>
    <ul></ul>


