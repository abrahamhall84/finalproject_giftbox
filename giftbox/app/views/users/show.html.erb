

<%if @user.is_gifter %>

<div>THIS USER IS A GIFTER</div>

 <%= simple_form_for  [@user, @item], url: "/users/#{@user.id}/items" do |f| %>
<div class = "user_dropdown">
    <p>Item to Donate</p> 
    <div class = "product">

    <%= f.input :product, :collection => ['Apples','Orange','Lemon','Carrot','Tomato'] %>
    </div>
  </div>
    <p>Quantity</p>
    <div class = "quantity">
    <%= f.input :give_quantity %>
    </div>
