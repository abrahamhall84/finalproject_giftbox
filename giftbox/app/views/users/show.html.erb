<% else%>
<div>THIS USER IS A GIFTEE</div>

<%= simple_form_for  :item, url: user_path, method: "post" do |f| %>


<div class = "user_dropdown">
  
  <p>Item Requested</p>
  <%= f.input :product, :collection => ['Apple','Orange','Lemon','Carrot','Tomato'] %>
  <p>Quantity</p>
  <%= f.input :want_quantity %>
  <p>Pick Up Day/Time</p>
  <%= f.input :pick_up, :collection => ['Wed/7 p.m.','Thurs/7 p.m.'] %>
</div>
  <br>
   <%= f.submit %>
  <br>
  <ul></ul>

<% end %>
<% end %>

